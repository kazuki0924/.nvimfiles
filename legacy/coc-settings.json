{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "markdown": ["write-good", "markdownlint"],
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "lua": "lua-format",
    "sh": "shfmt"
  },
  "diagnostic-languageserver.linters": {
    "shellcheck": {
      "command": "shellcheck",
      "debounce": 100,
      "args": ["-x", "--format", "json", "-"],
      "sourceName": "shellcheck",
      "parseJson": {
        "line": "line",
        "column": "column",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "${message} [${code}]",
        "security": "level"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "info": "info",
        "style": "hint"
      }
    }
  },
  "snippets.textmateSnippetsRoots": ["~/.config/coc/vsc-snippets"]
}

